<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sds.study.humidgraph.Bluetooth_MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentdevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="DEVICE NAME     "
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#627bdb"/>

        <TextView
            android:id="@+id/currentmac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MAC ADDRESS"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#627bdb"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9" />

        <Button
            android:id="@+id/bt_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:layout_gravity="center"
            android:text="Device Serch"
            android:background="#627bdb"/>


    </LinearLayout>
</LinearLayout>
